{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "umd",
    "charset": "utf8",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
    "declaration": true,
    "inlineSourceMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "/**/*.test.ts",
    "tests"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "axios"
    ]
  }
}